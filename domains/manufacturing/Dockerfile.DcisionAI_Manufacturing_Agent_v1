# DcisionAI Manufacturing Agent v1 - AgentCore SDK Production Deployment
# Based on: https://strandsagents.com/latest/documentation/docs/user-guide/deploy/deploy_to_bedrock_agentcore/

FROM --platform=linux/arm64 python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies including git
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.DcisionAI_Manufacturing_Agent_v1.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.DcisionAI_Manufacturing_Agent_v1.txt

# Copy source code
COPY src/ ./src/

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Expose port 8080 (AgentCore requirement)
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8080/ping || exit 1

# Run the AgentCore SDK agent
CMD ["python", "src/mcp_server/DcisionAI_Manufacturing_Agent_v1.py"]
