# Dockerfile for DcisionAI Manufacturing AgentCore Agent (SDK Integration)
# Based on official Strands AgentCore deployment guide

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    gcc \
    g++ \
    cmake \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ ./src/

# Set Python path
ENV PYTHONPATH=/app/src

# Expose port 8080 (required by AgentCore)
EXPOSE 8080

# Run the AgentCore agent using SDK
CMD ["python", "-m", "mcp_server.agentcore_simple_agent"]
